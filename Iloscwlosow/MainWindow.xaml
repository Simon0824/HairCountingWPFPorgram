<Window x:Class="Iloscwlosow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Iloscwlosow"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid>
        <TextBlock Style="{StaticResource tytul}"></TextBlock>
        <TextBlock Style="{StaticResource liczbawlosow}"></TextBlock>
        <TextBox Style="{StaticResource wlosyliczba}" x:Name="Gestosc"></TextBox>
        <TextBlock Style="{StaticResource obwodglowy}"/>
        <TextBox Style="{StaticResource glowyobwod}" x:Name="obwod"></TextBox>
        <TextBlock Style="{StaticResource wysczola}"></TextBlock>
        <TextBox Style="{StaticResource czolowys}" x:Name="wysokosc"></TextBox>
        <Button Style="{StaticResource oblicz}" Click="Obliczaniewlosow"></Button>
        <Button Style="{StaticResource reset}" Click="Reset"></Button>
        <TextBlock Style="{StaticResource wynik}" x:Name="Wynik"></TextBlock>
    </Grid>
</Window>
